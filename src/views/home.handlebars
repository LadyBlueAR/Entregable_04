<div>
    <h1>Lista De Productos</h1>
    {{#if limitedProducts}}
        <ul>
            {{#each limitedProducts}}
                <li>
                    <h2>{{title}}</h2>
                    <p>ID: {{id}}</p>
                    <p>{{description}}</p>
                    <p>Precio: {{price}}</p>
                    <img src="/img/{{thumbnail}}" alt="Imagen del producto" style="width: 10%;">
                </li>
            {{/each}}
        </ul>
    {{else}}
        {{#if products}}
            <ul>
                {{#each products}}
                    <li>
                        <h2>{{title}}</h2>
                        <p>ID: {{id}}</p>
                        <p>{{description}}</p>
                        <p>Precio: {{price}}</p>
                        <img src="/img/{{thumbnail}}" alt="Imagen del producto" style="width: 10%;">
                    </li>
                {{/each}}
            </ul>
        {{else}}
            <p>No hay productos disponibles.</p>
        {{/if}} 
    {{/if}}
</div>